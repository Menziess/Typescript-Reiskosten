{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "noResolve": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": [
      "es5"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
